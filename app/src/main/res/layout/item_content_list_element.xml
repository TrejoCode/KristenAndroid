<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_list_element_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/mediumTextStyle"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bullet_list_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bullet_list_image"
        app:layout_constraintTop_toTopOf="@+id/bullet_list_image"
        tools:text="TextView" />

    <ImageView
        android:id="@+id/bullet_list_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/mediumTextStyle"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_circle_black_24dp"
        android:contentDescription="@string/content_description" />
</androidx.constraintlayout.widget.ConstraintLayout>