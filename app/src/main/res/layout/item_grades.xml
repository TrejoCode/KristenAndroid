<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    app:contentPadding="16dp"
    style="@style/itemCardStyle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_item_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/titleTextCardStyle"
            app:layout_constraintEnd_toStartOf="@+id/text_item_generalGrade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Programación Móvil" />

        <TextView
            android:id="@+id/text_item_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            style="@style/smallTextCardStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_subject"
            tools:text="UINGIX2ACC" />

        <TextView
            android:id="@+id/text_item_generalGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bigTextCardStyle"
            android:paddingTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="9.2" />

        <TextView
            android:id="@+id/text_item_gradeOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/smallTextCardStyle"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_code"
            tools:text="9" />

        <TextView
            android:id="@+id/text_item_gradeTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/smallTextCardStyle"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/text_item_code"
            tools:text="8" />

        <TextView
            android:id="@+id/text_item_gradeThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/smallTextCardStyle"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/text_item_code"
            tools:text="9" />

        <TextView
            android:id="@+id/text_item_gradeFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/smallTextCardStyle"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/text_item_code"
            tools:text="5" />

        <TextView
            android:id="@+id/text_item_gradeFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/smallTextCardStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/text_item_code"
            tools:text="10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.60" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

