<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorTitle">@color/black</item>
        <item name="bottomNavigationBackgroundColor">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="AppThemeDark" parent="ThemeOverlay.MaterialComponents.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarker</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorTitle">@color/white</item>
        <item name="bottomNavigationBackgroundColor">@color/gray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_arrow_back_white</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="baseTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingTop">@dimen/medium_padding</item>
        <item name="android:paddingEnd">@dimen/medium_padding</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
    </style>

    <style name="textListStyle" parent="baseTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="smallTextStyle" parent="baseTextStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="mediumTextStyle" parent="baseTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="bigTextStyle" parent="baseTextStyle">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="titleTextStyle" parent="bigTextStyle">
        <item name="android:textColor">?attr/colorTitle</item>
    </style>

    <style name="subtitleTextStyle" parent="mediumTextStyle">
        <item name="android:paddingTop">@dimen/small_padding</item>
    </style>

    <style name="dividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- Card styles -->
    <style name="itemCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="titleTextCardStyle" parent="titleTextStyle">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="subtitleTextCardStyle" parent="subtitleTextStyle">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="smallTextCardStyle" parent="smallTextStyle">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="mediumTextCardStyle" parent="mediumTextStyle">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="bigTextCardStyle" parent="bigTextStyle">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="buttonCardStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
